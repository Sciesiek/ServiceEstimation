{% extends 'base_logged.html.twig' %}

{% block title %}Adres{% endblock %}

{% block main %}
    <h1>Adres</h1>
    <a href="{{ path('adres_edit', {'id': adre.id}) }}" class="edit">Edytuj</a>
    {{ include('adres/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adre.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ adre.city }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ adre.street }}</td>
            </tr>
            <tr>
                <th>HousingNumber</th>
                <td>{{ adre.housingNumber }}</td>
            </tr>
            <tr>
                <th>Postal</th>
                <td>{{ adre.postal }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}

{% extends 'base_logged.html.twig' %}

{% block title %}Dane klienta{% endblock %}

{% block main %}
    <h1>Klient</h1>
    <a href="{{ path('client_edit', {'id': client.id}) }}" class="edit">Aktualizuj</a>

    {{ include('client/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Imie</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Nazwisko</th>
                <td>{{ client.surname }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}

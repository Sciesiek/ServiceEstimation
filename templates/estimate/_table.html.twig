    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Klient</th>
                <th>Adres</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for estimate in estimates %}
            <tr>
                <td>{{ estimate.id }}</td>
                <td>{{ estimate.name }}</td>
                <td>{{ estimate.description }}</td>      
                <td>{{ estimate.client }}</td>
                <td>{{ estimate.adres }}</td>
                <td>
                <span class="right">
                    <a href="{{ path('estimate_show', {'id': estimate.id}) }}" class="details">Szczegóły</a>
                    <button onclick="openModal('estimate_edit{{ estimate.id }}')">Edytuj</button>
                </span>
                </td>
            </tr>
            {{ include('_modal_form.html.twig', {modal_id: ['estimate_edit', estimate.id]|join, modal_title: 'Edytuj kosztorys',
            form_path: '_form.html.twig', form_button: 'Edytuj', action_path: path('estimate_edit', {'id': estimate.id }),
            'form': estimate.form}) }}
        {% else %}
            <tr>
                <td colspan="4">Brak danych</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>